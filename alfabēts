<body>
    <h1>Alfabēta Šokolādes Kaste</h1>
    <div class="box-container" id="alphabetBox"></div>
    <div class="popup" id="popup">
        <img id="popupImage" src="" alt="Attēls">
        <br>
        <button class="close-btn" onclick="closePopup()">Aizvērt</button>
    </div>

    <script>
        const alphabet = ["A", "B", "C", "Č", "D", "E", "Ē", "F", "G", "Ģ", "H", "I", "Ī", "J", "K", "Ķ", "L", "Ļ", "M", "N", "Ņ", "O", "P", "R", "S", "Š", "T", "U", "Ū", "V", "Z", "Ž"];
        const alphabetBox = document.getElementById("alphabetBox");

        alphabet.forEach(letter => {
            const box = document.createElement("div");
            box.classList.add("letter-box");
            box.textContent = letter;
            box.onclick = () => openLetter(letter);
            alphabetBox.appendChild(box);
        });

        function openLetter(letter) {
            document.getElementById("popupImage").src = `images/${letter}.png`;
            document.getElementById("popup").classList.add("show");
        }

        function closePopup() {
            document.getElementById("popup").classList.remove("show");
        }
    </script>
</body>
</html>
